<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

  <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Twitter</th>
          <th> </th>
          <th> </th>
          <th> </th>
        </tr>
      </thead>



      <div id="friends">
        <tbody>
          <% @friends.each do |friend| %>
            
            <tr>
              <td>
                <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
              </td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
              <td><%= link_to "Show", friend %></td>
              <td><%= link_to "Edit", edit_friend_path(friend)  %></td>
              <td><%= button_to "Delete", friend, class:"btn btn-danger", method: :delete %></td>
            </tr>

          <% end %>  

        </tbody>
        
      </div>
  </table>
  <br>

  <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>