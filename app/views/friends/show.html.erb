<p style="color: green"><%= notice %></p>


<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    Email: <%= @friend.email %>
    <br>
    Phone: <%= @friend.phone %>
    <br>
    Twitter: <%= @friend.twitter %>
  </p>
  
  <br>
  <div>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
    <br>
    <br>
    
    <%= button_to "Destroy this friend", @friend, class:"btn btn-danger", method: :delete %>
  </div>

</div>



